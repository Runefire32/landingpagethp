<% provide(:title, "Se connecter") %>
<div class="forct">
  <h1 class="main-title">Connexion <i class="fas fa-plug"></i></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="main-title">
        <h2><%= f.label :email , "Email"%><br /></h2>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="main-title">
        <h2><%= f.label :password ,"Mot de Passe"%><br /></h2>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="main-title">
          <%= f.check_box :remember_me  %>
          <h3><%= f.label :remember_me, "se souvenir de moi" %></h3>
        </div>
      <% end %>

      <div class="actions connex">
      <%= f.submit "Se connecter", class: "btn btn-primary" %>
      </div>
    <% end %>
      <%= render "devise/shared/links" %>
    
</div>